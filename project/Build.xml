<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxfmod}/project/fmod/include" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${haxelib:hxfmod}/project/fmod/include" />
	</files>

	<target id="haxe">
		<section if="windows">
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows64/fmod.lib" if="HXCPP_M64" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/fmod.lib" if="HXCPP_M32" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/WindowsArm64/fmod.lib" if="HXCPP_ARM64" />
		</section>

		<section if="winrt">
			<lib name="${haxelib:hxfmod}/project/fmod/lib/WinRT64/fmod.lib" if="HXCPP_M64" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/WinRT/fmod.lib" if="HXCPP_M32" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/WinRTArm/fmod.lib" if="HXCPP_ARMV7"/>
		</section>

		<lib name="${haxelib:hxfmod}/project/fmod/lib/MacOS/libfmod.dylib" if="mac" />

		<section if="linux">
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Linux64/libfmod.so" if="HXCPP_M64" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Linux/libfmod.so" if="HXCPP_M32" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/LinuxArm64/libfmod.so" if="HXCPP_ARM64" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/LinuxArm/libfmod.so" if="HXCPP_ARMV7" />
		</section>

		<section if="android">
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Android/libfmod-v7.so" if="HXCPP_ARMV7" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Android/libfmod-64.so" if="HXCPP_ARM64" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Android/libfmod-x86.so" if="HXCPP_X86" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/Android/libfmod-x86_64.so" if="HXCPP_X86_64" />
		</section>

		<section if="iphoneos || iphonesim">
			<lib name="${haxelib:hxfmod}/project/fmod/lib/iPhone/libfmod.iphoneos-64.a" if="HXCPP_ARM64" />
			<lib name="${haxelib:hxfmod}/project/fmod/lib/iPhone/libfmod.iphonesim-64.a" if="HXCPP_M64" />
		</section>
	</target>
</xml>
