<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Windows/core/inc" if="windows"/>
		<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Android/core/inc" if="android"/>
	</files>

	<files id="__main__">
		<section unless="linux">
			<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Windows/core/inc" if="windows"/>
			<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Android/core/inc" if="android"/>
		</section>
	</files>

	<target id="haxe">
		<section if="windows">
			<lib name="${haxelib:hxfmod}/project/fmod/Windows/core/lib/x64/fmod_vc.lib" if="HXCPP_M64" />
			<lib name="${haxelib:hxfmod}/project/fmod/Windows/core/lib/x86/fmod_vc.lib" if="HXCPP_M32" />
			<lib name="${haxelib:hxfmod}/project/fmod/Windows/core/lib/arm64/fmod_vc.lib" if="HXCPP_ARM64" />
		</section>
	</target>
</xml>
