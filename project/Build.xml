<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Windows/core/inc" if="windows"/>
		<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Android/core/inc" if="android"/>
	</files>

	<files id="__main__">
		<section unless="linux">
			<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Windows/core/inc" if="windows"/>
			<compilerflag value="-I${haxelib:hxfmod}/project/fmod/Android/core/inc" if="android"/>
		</section>
	</files>

	<target id="haxe">

		<section if="windows">
			<section if="HXCPP_M64">
				<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/x64/fmod_vc.lib" unless="debug" />
				<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/x64/fmodL_vc.lib" if="debug"/>
			</section>

			<section if="HXCPP_M32">
				<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/x86/fmod_vc.lib" unless="debug"/>
				<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/x86/fmodL_vc.lib" if="debug" />
			</section>

			<section if="HXCPP_ARM64">
				<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/arm64/fmod_vc.lib" unless="debug" />
				<lib name="${haxelib:hxfmod}/project/fmod/lib/Windows/arm64/fmodL_vc.lib" if="debug"/>
			</section>
		</section>
	
	</target>
</xml>
